@import '../mixin'

bsLineHeight = 1.42857143

bsBtn(w = auto, h = auto, fc = #fff, bgc = #007bff, rds = 4px)
  display inline-block
  vertical-align middle
  margin-bottom 0
  padding 6px 12px
  typeset(fc, 14px, 400, center, bsLineHeight, ws: nowrap, us: none)
  box(w, h, bgc, rds: rds, brd: 1px solid bgc)
  cursor pointer

  &:hover, &:focus
    outline none
    border-color darken(bgc, 5%)
    background-color darken(bgc, 8%)

bsInput(w = 100px)
  padding 6px 12px
  typeset #555, 14px, 500, , bsLineHeight
  box w, 34px, #fff, 1px solid #ccc, 4px, inset 0 1px 1px #00000013
  transition border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s

  &:focus
    border-color #66afe9
    outline 0
    box-shadow inset 0 1px 1px #00000013, 0 0 8px #66afe999
